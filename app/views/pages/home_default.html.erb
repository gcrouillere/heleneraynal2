<% content_for(:description) do %>
  Vente de céramiques et poteries artisanales réalisées par Hélène Raynal. Découvrez dans la boutique mes créations uniques. Vous y retrouverez des céramiques utilitaires et décoratives. Mes créations sont en faïence et calligraphiées au pinceau.
<% end %>
<% content_for(:title_tag) do %>
  Vente en ligne des céramiques contemporaines d'Hélène Raynal
<% end %>

<%= render 'shared/home_pics' %>

<div class="jumbotron">
  <style>
  .jumbotron .banner {
  background-image: linear-gradient(135deg, rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= @homepicpath %>);
  }
  .jumbotron .banner-xs {
  background-image: linear-gradient(135deg, rgba(0,0,0,0.7) 0%, rgba(0,0,0,0.4) 50%), url(<%= @homepicpathmobile %>);
  }
  </style>

<!-- LAPTOP -->
  <div class="hidden-xs">
    <div class="banner">
      <div class="banner-content">
        <h1><%= t(:home_h1)%></h1>
        <p><%= t(:home_teaser)%></p>
        <%= link_to t(:home_button), ceramiques_path, class: "btn btn-primary btn-lg btn-home" %>
      </div>
        <%= photo_update('productphoto', 30, '', '', 30, '.homepic', "Mise à jour photo d'accueil")%>
        <%= photo_update('productphotomobile', 30, '', '', 412, '.homepicmobile', "Mise à jour photo d'accueil pour mobiles")%>
        <%= photo_update('logophoto', 30, '', '', 785, '.logopic', "Mise à jour logo")%>
    </div>
  </div>

<!-- MOBILE -->
  <div class="hidden-sm hidden-md hidden-lg">
    <div class="banner-xs">
      <div class="banner-content-xs">
        <h1><%= t(:home_h1)%></h1>
        <p><%= t(:home_teaser)%></p>
        <%= link_to t(:home_button), ceramiques_path, class: "btn btn-primary btn-home" %>
      </div>
    </div>
  </div>

</div>

<div class="home-text hidden-xs hidden-sm">
  <div class="text">
    <div class="text-left col-xs-4">
      <% if user_signed_in? && current_user.admin %>
          <% article_typing("accueil-gauche", "vertical", "markdown1", "live-text1", "input1") %>
          <% @markdown = @markdown1 %>
          <div class="live-text">
            <%= render 'shared/articletyping' %>
          </div>
      <% else %>
        <div class="plain-text">
          <% article_display("accueil-gauche", "vertical") %>
          <%= @markdown.html_safe %>
        </div>
      <% end %>
    </div>
    <div class="text-right col-xs-8">
      <% if user_signed_in? && current_user.admin %>
          <% article_typing("accueil-droit", "vertical", "markdown2", "live-text2", "input2") %>
          <% @markdown = @markdown2 %>
          <div class="live-text">
            <%= render 'shared/articletyping' %>
          </div>
      <% else %>
        <div class="plain-text">
          <% article_display("accueil-droit", "vertical") %>
          <%= @markdown.html_safe %>
        </div>
      <% end %>

    </div>
</div>

<% content_for(:after_js) do %>
  <script type="application/ld+json">
  {
    "@context": "http://schema.org",
    "@type": "ArtGallery",
    "image": ["<%=request.original_url%><%= image_path ENV['HOMEPIC']%>"],
    "@id": "<%=request.original_url%>",
    "name": "<%=t(:les_produits_de_machin, product:"#{ENV['MODEL']}", name: "#{ENV['FIRSTNAME'].capitalize} #{ENV['LASTNAME'].capitalize}")%>",
    "address": {
      "@type": "PostalAddress",
      "streetAddress": "12 rue de la paix",
      "addressLocality": "Paris",
      "addressRegion": "IDF",
      "postalCode": "75000",
      "addressCountry": "FR"
    },
    "geo": {
      "@type": "GeoCoordinates",
      "latitude": <%= ENV['LAT'].to_f %>,
      "longitude": <%= ENV['LAT'].to_f %>
    },
    "url": "<%=request.original_url%>",
    "telephone": "<%= ENV['TELEPHONE']%>",
    "openingHoursSpecification": [
      {
        "@type": "OpeningHoursSpecification",
        "dayOfWeek": ["Monday", "Tuesday", "Wednesday", "Thursday", "Friday"],
        "opens": "10:00",
        "closes": "17:00"
      },
      {
        "@type": "OpeningHoursSpecification",
        "dayOfWeek": ["Saturday","Sunday"],
        "opens": "closed",
        "closes": "closed"
      }
    ],
   "priceRange":"20€ à 800€"
  }
  </script>
<% end %>
