<% content_for(:description) do %>
Vendez vos produits en ligne ! Site de e-commerce configurable. Affichez sur cette page des informations vous concernant : biographie, techniques utilisées.
<% end %>
<% content_for(:title_tag) do %>
  Page bio de votre site de e-commerce
<% end %>

<%= render 'shared/info_pics' %>

<div class="container">
  <div class="row">

  <!-- LAPTOP -->
    <div class="hidden-xs hidden-sm col-sm-12">
      <div class="wrapper-darktheme">
        <%= photo_update('avatarphoto', 35, '', '', 15, '.avatarpic', "Mise à jour photo perso")%>
        <%= @avatarpictag %>

        <% if user_signed_in? && current_user.admin %>
          <% article_typing("info", "horizontal", "markdown1", "live-text0", "input0") %>
          <% @markdown = @markdown1 %>
          <%= render 'shared/articletyping' %>
        <% else %>
            <div id="live-text-darktheme">
              <% article_display("info", "horizontal") %>
              <%= @markdown.html_safe %>
            </div>
        <% end %>
      </div>
    </div>

  <!-- MOBILE -->
   <div class="col-xs-12 hidden-md hidden-lg mobile-info">
      <div class="wrapper-mobile-darktheme">
        <div class="img-avatar-mobile"><%= @avatarpictagmobile %></div>
        <%= @markdown.html_safe %>
      </div>
    </div>

  </div>
</div>

<% content_for(:after_js) do %>
  <script type="application/ld+json">
    {
      "@context": "http://schema.org",
      "@type": "ArtGallery",
      "name": "Les <%="#{ENV['MODEL']} de #{ENV['FIRSTNAME'].capitalize} #{ENV['LASTNAME'].capitalize}"%>",
      "description": "Online craft store",
      "openingHours": "Mo-Fr 09:00-18:00",
      "telephone": "<%= ENV['TELEPHONE']%>",
      "url": "<%=request.original_url%>",
      "image":"<%=request.original_url%><%= image_path ENV['HOMEPIC']%>"
      "address":"<%= ENV['ADDRESS'].gsub(/[+]/, ' ') %>",
      "priceRange":"20€ à 800€"
    }
  </script>
<% end %>
