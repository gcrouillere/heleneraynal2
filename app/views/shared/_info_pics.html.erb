<% @avatarpictag = image_tag ENV['AVATAR'], class: "img-avatar", alt: "Hélène Raynal, créatrice de céramiques et poteries contemporaines." %>
<% @avatarpictagmobile = image_tag ENV['AVATAR'], alt: "Hélène Raynal, créatrice de céramiques et poteries contemporaines."  %>
<% @citypictag = image_tag ENV['CITY'], alt: "#{ENV['ADDRESS'].gsub(/[+]/, ' ')}, localisation de l'atelier d'Hélène Raynal" %>
<%=  %>
<% @citypicpath = image_path ENV['CITY'] %>
<%=  %>
<% if @admin %>
  <% if @admin.avatarphoto.present? %>
    <% if @admin.avatarphoto.width.to_f / (@admin.avatarphoto.height) > 1.2 %>
      <% @avatarpictag = cl_image_tag @admin.avatarphoto.path, :width => 450, :height => 390, :crop => :thumb, :gravity => :face, class: "img-avatar", alt: "Hélène Raynal, créatrice de céramiques et poteries contemporaines." %>
    <% else %>
      <% @avatarpictag = cl_image_tag @admin.avatarphoto.path, class: "img-avatar", alt: "Hélène Raynal, créatrice de céramiques et poteries contemporaines."%>
    <% end %>
    <% @avatarpictagmobile = cl_image_tag(cl_image_path @admin.avatarphoto.path, :width => 200, :height => 200, alt: "Hélène Raynal, créatrice de céramiques et poteries contemporaines.") %>
  <% end %>
  <% if  @admin.cityphoto.present? %>
      <% @citypictag = cl_image_tag(cl_image_path @admin.cityphoto.path, alt: "#{ENV['ADDRESS'].gsub(/[+]/, ' ')}, localisation de l'atelier d'Hélène Raynal") %>
      <% @citypicpath = @admin.cityphoto.path %>
  <% end %>
<% end %>
