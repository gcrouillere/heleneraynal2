<% content_for(:after_js) do %>
<script type="application/ld+json">
  {
    "@context": "http://schema.org/",
    "@type": "ItemList",
    "url": "<%=request.original_url%>",
    "numberOfItems": "<%=@ceramiques.size%>",
    "name": "Hélène Raynal Céramiste",
    "itemListElement": <%= raw @ceramiques.map {|ceramique| {
      "@type": "ListItem",
      "position": @ceramiques.index(ceramique) + 1,
      "image": cl_image_path(ceramique.photos[0]&.path || ""),
      "name": ceramique.name,
      "url": "https://www.heleneraynal.fr/#{ENV['MODEL']}/#{ceramique.to_param}",
    }}.to_json %>
  }
  </script>
<% end %>
